@model Market_Shop.Models.Product_type

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Тип продуктов</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product_types" class="control-label"></label>
                <input asp-for="Product_types" class="form-control" />
                <span asp-validation-for="Product_types" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ratio_Product_types" class="control-label"></label>
                <input  asp-for="Ratio_Product_types" class="form-control" />
                <span asp-validation-for="Ratio_Product_types" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
